{
    "manifest_version": 2,

    "name": "Chrome Expander",
    "short_name": "Ch-Ex",
    "description": "Just use it and be happy.",
    "version": "2.2.1",
    "homepage_url": "https://github.com/kubaissen/chrome-expander",
    "author": {
        "name": "Jarek",
        "nickname": "J.Kubai ≈Å",
        "email": "kubaissen@gmail.pl"
    },

    "default_locale": "en",

    "browser_action": {
        "default_icon": "icons/extension72C.png"
    },

    "icons": {
        "48": "icons/extension48C.png",
        "72": "icons/extension72C.png",
        "96": "icons/extension96C.png",
        "144": "icons/extension144C.png",
        "192": "icons/extension192C.png"
    },

    "content_scripts": [{
        "matches": [
            "*://*/*"
        ],
        "js": [
            "js/mod/csFrame.js",
            "js/startScript.js",
            "js/csMessage.js"
        ],
        "css": [
            "js/css.css"
        ]
    }],

    "background": {
        "scripts": [
            "bg/mod/bgBadges.js",
            "bg/mod/bgStorage.js",
            "bg/bgStart.js",
            "bg/bgMessage.js"
        ],
        "persistent": false
    },

    "permissions": [
        "tabs",
        "storage",
        "contextMenus"
    ],

    "web_accessible_resources": [
        "popup/popup.html"
    ]
}